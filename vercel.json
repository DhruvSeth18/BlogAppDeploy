{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["dist/**"] }
        },
        {
            "src": "./BlogApp",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
            {"src": "api/(.*)", "dest": "index.js"},
            { "src": "/(.*)", "dest": "./BlogApp/dist/index.html"}
    ],
    "hooks": {
        "predeploy": "npm run build-blogapp"
    }
}
